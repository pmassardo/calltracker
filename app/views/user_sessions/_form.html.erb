<%= form_tag user_sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email  , "", class: 'form-control' %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password , "", class: 'form-control' %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", {:class => 'btn btn-success'} %>
  </div>
<% end %>
